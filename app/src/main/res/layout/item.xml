<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/makanan"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="6sp"
        android:layout_marginLeft="6sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/makan"
        tools:src="@drawable/makan"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/judul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/makanan"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/deskripsi"
        app:layout_constraintStart_toStartOf="@+id/deskripsi"
        app:layout_constraintTop_toTopOf="@+id/makanan" />

    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="248dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="@string/enak_dan_lezat"
        app:layout_constraintBottom_toBottomOf="@+id/makanan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/makanan"
        app:layout_constraintTop_toBottomOf="@+id/judul" />

</androidx.constraintlayout.widget.ConstraintLayout>